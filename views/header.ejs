    <div id="user" class="inner hidden">
      <% if (user) { %>
        <input type="hidden" id="loggedIn">
        Welcome, <b><%= user.username %></b>
        <a class="button float-right" href="/api/logout?u=<%= here %>">Log out</a>
        <table>
          <tr>
            <th>Info</th>
          </tr>
          <tr>
            <td>Email:</td>
            <% if (user.email) { %>
              <td id="emailCell"><%= user.email.replace(/(?<=.{5}.*).(?=.*@)/g, "*") %></td>
              <td id="emailButtonsCell">
                <a class="button" href="/update/email?u=<%= here %>">Update</a>
                <a class="button" onclick="modal.open('#emailDeletionWarning');">Remove</a>
              </td>
            <% } else { %>
              <td>none</td>
              <td>
                <a class="button" href="/update/email?u=<%= here %>">Add</a>
              </td>
            <% } %>
          </tr>
          <tr>
            <td>Password:</td>
            <td>&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;</td>
            <td>
              <a class="button" href="/update/password?u=<%= here %>">Update</a>
            </td>
          </tr>
        </table>
      <% } else { %>
        <a href="<%= '/login?u=' + here %>">Log in</a> or <a href="<%= '/signup?u=' + here %>">Sign up</a>
